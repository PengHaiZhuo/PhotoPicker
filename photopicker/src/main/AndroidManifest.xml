<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phz.photopicker" >
    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name="com.phz.photopicker.activity.PickerImageActivity"/>
        <activity android:name="com.phz.photopicker.activity.PreViewImageActivity"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.phz.android7.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

</manifest>
